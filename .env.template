# Simple Waitlist Environment Configuration
# =================================================
# Copy this file to .env and customize values for your environment

# DATABASE CONFIGURATION
# -------------------------------------------------
# PostgreSQL connection settings (default values match docker-compose)
# Database name
POSTGRES_DB_NAME=django
# Database username
POSTGRES_USER=django
# Database password
POSTGRES_PASSWORD=django
# Database host
POSTGRES_HOST=postgres
# Database port
POSTGRES_PORT=5432

# DJANGO CONFIGURATION
# -------------------------------------------------
# Core settings
# Enable/disable debug mode (set to False in production)
DJANGO_DEBUG=True
# Secret key for security (use a strong random value in production)
DJANGO_SECRET_KEY=super_secret_key

# Host/Origin settings
# Comma-separated list of allowed hostnames
DJANGO_ALLOWED_HOSTS=waitlist.mydomain.com
# Comma-separated list of allowed origins for CORS
DJANGO_ALLOWED_ORIGINS=https://waitlist.mydomain.com,https://mywebsite1.com,https://mywebsite2.com

# Cookie settings
# Domain for CSRF cookies
DJANGO_CSRF_COOKIE_DOMAIN=mydomain.com
# Domain for session cookies
DJANGO_SESSION_COOKIE_DOMAIN=mydomain.com
# Optional: Name of the CSRF cookie (defaults to 'csrftoken')
# DJANGO_CSRF_COOKIE_NAME=csrftoken

# LOGGING CONFIGURATION
# -------------------------------------------------
# Log level for Django (INFO, DEBUG, WARNING, ERROR, CRITICAL)
LOGGING_LOG_LEVEL=DEBUG
